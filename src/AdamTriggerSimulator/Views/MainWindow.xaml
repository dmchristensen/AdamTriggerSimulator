<Window x:Class="AdamTriggerSimulator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AdamTriggerSimulator.ViewModels"
        xmlns:models="clr-namespace:AdamTriggerSimulator.Models"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        Title="ADAM 6000 Trigger Simulator"
        Icon="/adam-trigger-simulator.png"
        Width="1200" Height="700"
        MinWidth="1200" MinHeight="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource ApplicationBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Header Bar -->
        <Border Grid.Row="0" Background="#24292e" Padding="15,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/adam-trigger-simulator.png"
                       Width="30"
                       Height="30"
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"/>
                <TextBlock Text="ADAM 6000 Trigger Simulator"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="325"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <!-- LEFT PANEL: Device Profiles -->
            <ui:Card Grid.Column="0" Grid.Row="0" Margin="0,0,5,0" Padding="15" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Device Profiles"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>

                    <!-- Profile Selector -->
                    <ComboBox Grid.Row="1"
                              ItemsSource="{Binding Profiles}"
                              SelectedItem="{Binding SelectedProfile}"
                              DisplayMemberPath="DisplayText"
                              Margin="0,0,0,15"/>

                    <!-- Device Information Display -->
                    <Border Grid.Row="2"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15"
                            Margin="0,0,0,15"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <!-- Show when testing, success, or failed -->
                                    <DataTrigger Binding="{Binding IsTesting}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DeviceInfoAvailable}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TestFailed}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <!-- Testing State -->
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsTesting}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="ðŸ”" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="Testing Connection" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Please wait while we connect to your device and retrieve its information..."
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"/>
                            </StackPanel>

                            <!-- Success State -->
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding DeviceInfoAvailable}" Value="True"/>
                                                    <Condition Binding="{Binding IsTesting}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="âœ… Device Connected" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock FontSize="11" Margin="0,2">
                                    <Run Text="Version:" FontWeight="SemiBold"/>
                                    <Run Text="{Binding DeviceVersion}"/>
                                </TextBlock>
                                <TextBlock FontSize="11" Margin="0,2">
                                    <Run Text="Model:" FontWeight="SemiBold"/>
                                    <Run Text="{Binding DeviceModel}"/>
                                </TextBlock>
                                <TextBlock FontSize="11" Margin="0,2">
                                    <Run Text="Name:" FontWeight="SemiBold"/>
                                    <Run Text="{Binding DeviceName}"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Failed State -->
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding TestFailed}" Value="True"/>
                                                    <Condition Binding="{Binding IsTesting}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="âš ï¸" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="Connection Failed" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,8" Foreground="#F44336"/>
                                <TextBlock Text="{Binding FailureMessage}"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Foreground="#F44336"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Spacer to push buttons to bottom -->
                    <!-- Row 3 is the spacer with Height="*" -->

                    <!-- Profile Actions -->
                    <StackPanel Grid.Row="4" VerticalAlignment="Bottom">
                        

                        <!-- Interaction Buttons in Row -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ui:Button Grid.Column="0"
                                       HorizontalAlignment="Stretch"
                                       Content="ðŸ”Œ Test"
                                       Command="{Binding TestConnectionCommand}"
                                       Appearance="Primary"
                                       Margin="4"/>

                            <ui:Button Grid.Column="1" Grid.ColumnSpan="2"
                                       HorizontalAlignment="Stretch"
                                       Content="ðŸ“¤ Manual Command"
                                       Command="{Binding OpenManualCommandDialogCommand}"
                                       Appearance="Secondary"
                                       Margin="4"/>

                        </Grid>

                        <!-- Profile Management Buttons in Row -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ui:Button Grid.Column="0"
                                       HorizontalAlignment="Stretch"
                                       Content="âž• New"
                                       Command="{Binding CreateProfileCommand}"
                                       Background="#4CAF50"
                                       Foreground="White"
                                       BorderBrush="#4CAF50"
                                       CornerRadius="4"
                                       Margin="4">
                                <ui:Button.Style>
                                    <Style TargetType="ui:Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ui:Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="{TemplateBinding CornerRadius}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ui:Button.Style>
                            </ui:Button>
                            <ui:Button Grid.Column="1"
                                       HorizontalAlignment="Stretch"
                                       Content="âœï¸ Edit"
                                       Command="{Binding EditProfileCommand}"
                                       Appearance="Secondary"
                                       Margin="4"/>
                            <ui:Button Grid.Column="2"
                                       HorizontalAlignment="Stretch"
                                       Content="ðŸ—‘ï¸ Delete"
                                       Command="{Binding DeleteProfileCommand}"
                                       Background="#F44336"
                                       Foreground="White"
                                       BorderBrush="#F44336"
                                       CornerRadius="4"
                                       Margin="4">
                                <ui:Button.Style>
                                    <Style TargetType="ui:Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ui:Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="{TemplateBinding CornerRadius}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ui:Button.Style>
                            </ui:Button>
                        </Grid>

                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- CENTER PANEL: Input Controls -->
            <ui:Card Grid.Column="1" Grid.Row="0" Margin="5,0" Padding="10" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0"
                               Text="Digital Input Controls"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <!-- Input Controls List -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding InputControls}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="6"
                                        Margin="0,0,0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayName}"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Width="45"
                                                   Margin="0,0,8,0"/>

                                        <Border Grid.Column="1"
                                                Background="{Binding CurrentState, Converter={StaticResource StateToColorConverter}}"
                                                CornerRadius="3"
                                                Padding="8,4"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentState}"
                                                       Foreground="White"
                                                       FontWeight="SemiBold"
                                                       FontSize="14"/>
                                        </Border>

                                        <Button Grid.Column="2"
                                                Content="SET HIGH"
                                                Command="{Binding SetHighCommand}"
                                                IsEnabled="{Binding Path=IsExecuting, Converter={StaticResource InverseBoolConverter}}"
                                                Padding="10,3"
                                                Margin="6,0,3,0"
                                                FontWeight="SemiBold"
                                                FontSize="10">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="Background" Value="#FF9800"/>
                                                    <Setter Property="BorderBrush" Value="#FF9800"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border"
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="4"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsEnabled" Value="False">
                                                                        <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CurrentState}" Value="High">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Setter Property="Foreground" Value="#FF9800"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Grid.Column="3"
                                                Content="SET LOW"
                                                Command="{Binding SetLowCommand}"
                                                IsEnabled="{Binding Path=IsExecuting, Converter={StaticResource InverseBoolConverter}}"
                                                Padding="10,3"
                                                Margin="3,0,0,0"
                                                FontWeight="SemiBold"
                                                FontSize="10">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="Background" Value="#2196F3"/>
                                                    <Setter Property="BorderBrush" Value="#2196F3"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border"
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="4"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsEnabled" Value="False">
                                                                        <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CurrentState}" Value="Low">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Setter Property="Foreground" Value="#2196F3"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Spacer to push buttons to bottom -->
                    <!-- Row 2 is the spacer, but we're using Row 1 with Height="*" for scrolling content -->

                    <!-- Set All Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Content="â¬†ï¸ SET ALL HIGH"
                                Command="{Binding SetAllHighCommand}"
                                Padding="16,6"
                                Margin="4"
                                Background="#FF9800"
                                Foreground="White"
                                BorderBrush="#FF9800"
                                FontWeight="SemiBold"/>
                        <Button Content="â¬‡ï¸ SET ALL LOW"
                                Command="{Binding SetAllLowCommand}"
                                Padding="16,6"
                                Margin="4"
                                Background="#2196F3"
                                Foreground="White"
                                BorderBrush="#2196F3"
                                FontWeight="SemiBold"/>
                        <ui:Button Command="{Binding TogglePollingCommand}"
                                   Margin="4"
                                   Padding="16,6"
                                   FontWeight="SemiBold"
                                   CornerRadius="4">
                            <ui:Button.Style>
                                <Style TargetType="ui:Button">
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ui:Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="{TemplateBinding CornerRadius}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPolling}" Value="True">
                                            <Setter Property="Content" Value="â¸ï¸ STOP POLLING"/>
                                            <Setter Property="Background" Value="#F44336"/>
                                            <Setter Property="BorderBrush" Value="#F44336"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsPolling}" Value="False">
                                            <Setter Property="Content" Value="â–¶ï¸ START POLLING"/>
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="BorderBrush" Value="#4CAF50"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:Button.Style>
                        </ui:Button>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- RIGHT PANEL: Sequence Builder -->
            <ui:Card Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Margin="5,0,0,0" Padding="10" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0"
                               Text="Sequence Builder"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12"/>

                    <!-- Sequence Selector -->
                    <ComboBox Grid.Row="1"
                              ItemsSource="{Binding Sequences}"
                              SelectedItem="{Binding SelectedSequence}"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,12"/>

                    <!-- Actions Display (Read-Only, Scrollable) -->
                    <Border Grid.Row="2"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,0,0,12" VerticalAlignment="Stretch"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding SequenceBuilder.Actions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                                BorderThickness="0,0,0,1"
                                                Padding="6,4">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsExecuting}" Value="True">
                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Description}"
                                                           FontSize="11">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsExecuting}" Value="True">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding ActionType}"
                                                           FontSize="9"
                                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsExecuting}" Value="True">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!-- Loop Controls -->
                    <Grid Grid.Row="3" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Loop:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   FontSize="12"/>

                        <ui:NumberBox Grid.Column="1"
                                      Value="{Binding SequenceBuilder.LoopCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Minimum="1"
                                      Maximum="999"
                                      SpinButtonPlacementMode="Compact"
                                      IsEnabled="{Binding SequenceBuilder.IsInfiniteLoop, Converter={StaticResource InverseBoolConverter}}"
                                      Margin="0,0,10,0"/>

                        <Border Grid.Column="2"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8,4"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                            <CheckBox IsChecked="{Binding SequenceBuilder.IsInfiniteLoop}"
                                      Content="â™¾ï¸ Infinite"
                                      FontSize="11"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!-- Spacer to push buttons to bottom -->
                    <!-- Row 4 is the spacer with Height="*" -->

                    <!-- Control Buttons -->
                    <StackPanel Grid.Row="5">
                        <!-- Playback Buttons -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:Button Grid.Column="0"
                                       HorizontalAlignment="Stretch"
                                       Content="â–¶ï¸ Play"
                                       Command="{Binding SequenceBuilder.PlaySequenceCommand}"
                                       IsEnabled="{Binding SequenceBuilder.IsExecuting, Converter={StaticResource InverseBoolConverter}}"
                                       Background="#4CAF50"
                                       Foreground="White"
                                       BorderBrush="#4CAF50"
                                       CornerRadius="4"
                                       Margin="4">
                                <ui:Button.Style>
                                    <Style TargetType="ui:Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ui:Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="{TemplateBinding CornerRadius}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ui:Button.Style>
                            </ui:Button>
                            <ui:Button Grid.Column="1"
                                       HorizontalAlignment="Stretch"
                                       Content="â¹ï¸ Stop"
                                       Command="{Binding SequenceBuilder.StopSequenceCommand}"
                                       IsEnabled="{Binding SequenceBuilder.IsExecuting}"
                                       Background="#F44336"
                                       Foreground="White"
                                       BorderBrush="#F44336"
                                       CornerRadius="4"
                                       Margin="4">
                                <ui:Button.Style>
                                    <Style TargetType="ui:Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ui:Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="{TemplateBinding CornerRadius}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ui:Button.Style>
                            </ui:Button>
                        </Grid>

                        <!-- Sequence Management Buttons -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:Button Grid.Column="0"
                                       HorizontalAlignment="Stretch"
                                       Content="âž• New"
                                       Command="{Binding CreateSequenceCommand}"
                                       Background="#4CAF50"
                                       Foreground="White"
                                       BorderBrush="#4CAF50"
                                       CornerRadius="4"
                                       Margin="4">
                                <ui:Button.Style>
                                    <Style TargetType="ui:Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ui:Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="{TemplateBinding CornerRadius}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ui:Button.Style>
                            </ui:Button>
                            <ui:Button Grid.Column="1"
                                       HorizontalAlignment="Stretch"
                                       Content="âœï¸ Edit"
                                       Command="{Binding EditSequenceCommand}"
                                       Appearance="Secondary"
                                       Margin="4"/>
                            <ui:Button Grid.Column="2"
                                       HorizontalAlignment="Stretch"
                                       Content="ðŸ—‘ï¸ Delete"
                                       Command="{Binding DeleteSequenceCommand}"
                                       Background="#F44336"
                                       Foreground="White"
                                       BorderBrush="#F44336"
                                       CornerRadius="4"
                                       Margin="4">
                                <ui:Button.Style>
                                    <Style TargetType="ui:Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ui:Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="{TemplateBinding CornerRadius}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ui:Button.Style>
                            </ui:Button>
                        </Grid>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- Command Log -->
            <ui:Card Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Padding="10" Margin="0,5,5,0" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Command Log" FontWeight="SemiBold"/>
                        <ui:Button Grid.Column="1" Content="Clear" Command="{Binding ClearLogCommand}" Padding="8,4"/>
                    </Grid>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CommandLog}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FormattedEntry}"
                                               FontFamily="Consolas,Courier New,monospace"
                                               FontSize="11"
                                               Margin="0,1"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </ui:Card>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                Padding="10,8"
                Margin="10,0,10,10"
                CornerRadius="4">
            <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold"/>
        </Border>

        <!-- Modal Overlay -->
        <Grid Grid.Row="1"
              Grid.RowSpan="2"
              Background="#80000000"
              IsHitTestVisible="True">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsOverlayVisible}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
        </Grid>
    </Grid>
</Window>
