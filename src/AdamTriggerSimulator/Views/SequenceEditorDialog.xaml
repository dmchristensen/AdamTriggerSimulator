<Window x:Class="AdamTriggerSimulator.Views.SequenceEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AdamTriggerSimulator.ViewModels"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:SequenceEditorDialogViewModel}"
        Title="{Binding DialogTitle}"
        Width="800" Height="620"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        KeyDown="Window_KeyDown">

    <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Background="{DynamicResource ApplicationBackgroundBrush}">
        <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Dialog Title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding DialogTitle}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- Form Fields and Builder -->
        <StackPanel Grid.Row="1">
            <!-- Sequence Name -->
            <TextBlock Text="Sequence Name:" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <ui:TextBox Text="{Binding SequenceName, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="Enter sequence name"
                        Margin="0,0,0,15"/>

            <!-- Description -->
            <TextBlock Text="Description (Optional):" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <ui:TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="Enter description"
                        AcceptsReturn="True"
                        Height="50"
                        TextWrapping="Wrap"
                        Margin="0,0,0,15"/>

            <!-- Actions and Add Actions Side-by-Side -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                <!-- LEFT: Add Actions -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Add Actions:" FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <!-- Three columns: HIGH, LOW, DELAYS -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Column 1: HIGH -->
                        <StackPanel Grid.Column="0" Margin="0,0,4,0">
                            <ui:Button Content="DI0 HIGH" Command="{Binding AddSetHighActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>0</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="DI1 HIGH" Command="{Binding AddSetHighActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>1</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="DI2 HIGH" Command="{Binding AddSetHighActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>2</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="DI3 HIGH" Command="{Binding AddSetHighActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>3</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="DI4 HIGH" Command="{Binding AddSetHighActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>4</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="DI5 HIGH" Command="{Binding AddSetHighActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>5</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                        </StackPanel>

                        <!-- Column 2: LOW -->
                        <StackPanel Grid.Column="1" Margin="4,0">
                            <ui:Button Content="DI0 LOW" Command="{Binding AddSetLowActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>0</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="DI1 LOW" Command="{Binding AddSetLowActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>1</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="DI2 LOW" Command="{Binding AddSetLowActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>2</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="DI3 LOW" Command="{Binding AddSetLowActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>3</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="DI4 LOW" Command="{Binding AddSetLowActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>4</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="DI5 LOW" Command="{Binding AddSetLowActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>5</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                        </StackPanel>

                        <!-- Column 3: DELAYS -->
                        <StackPanel Grid.Column="2" Margin="4,0,0,0">
                            <ui:Button Content="â±ï¸ 1s" Command="{Binding AddDelayActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>1000</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="â±ï¸ 2s" Command="{Binding AddDelayActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>2000</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="â±ï¸ 5s" Command="{Binding AddDelayActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>5000</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="â±ï¸ 10s" Command="{Binding AddDelayActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>10000</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="â±ï¸ 30s" Command="{Binding AddDelayActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>30000</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                            <ui:Button Content="â±ï¸ 60s" Command="{Binding AddDelayActionCommand}" Margin="0,2" Padding="6,3" FontSize="11">
                                <ui:Button.CommandParameter>
                                    <sys:Int32>60000</sys:Int32>
                                </ui:Button.CommandParameter>
                            </ui:Button>
                        </StackPanel>
                    </Grid>

                    <!-- Loop Settings -->
                    <TextBlock Text="Loop Settings:" FontWeight="SemiBold" Margin="0,15,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Count:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <ui:NumberBox Grid.Column="1"
                                      Value="{Binding LoopCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Minimum="1"
                                      Maximum="999"
                                      SpinButtonPlacementMode="Compact"
                                      IsEnabled="{Binding IsInfiniteLoop, Converter={StaticResource InverseBoolConverter}}"
                                      Margin="0,0,8,0"/>

                        <Border Grid.Column="2"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8,4"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                            <CheckBox IsChecked="{Binding IsInfiniteLoop}"
                                      Content="â™¾ï¸ Infinite"
                                      FontSize="11"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- RIGHT: Actions List -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Actions:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Height="267">
                        <ListBox ItemsSource="{Binding Actions}"
                                 SelectedItem="{Binding SelectedAction}"
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            Padding="6" Margin="0"
                                            Background="Transparent">
                                        <Grid HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Description}"
                                                       FontSize="12" FontWeight="DemiBold" Margin="0" Padding="0"
                                                       VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="1"
                                                        Orientation="Horizontal" Margin="0">
                                                <ui:Button Content="â†‘"
                                                           Command="{Binding DataContext.MoveActionUpCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           Padding="4"
                                                           Margin="0"
                                                           FontSize="10"
                                                           Width="60"
                                                           ToolTip="Move Up"/>
                                                <ui:Button Content="â†“"
                                                           Command="{Binding DataContext.MoveActionDownCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           Padding="4"
                                                           Margin="0"
                                                           FontSize="10"
                                                           Width="60"
                                                           ToolTip="Move Down"/>
                                                <ui:Button Content="ðŸ—‘ï¸"
                                                           Command="{Binding DataContext.RemoveActionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           Padding="4"
                                                           Margin="0"
                                                           FontSize="10"
                                                           Width="60"
                                                           ToolTip="Remove"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Validation Error -->
            <TextBlock Grid.Column="0"
                       Text="{Binding ValidationError}"
                       Foreground="#F44336"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Visibility="{Binding ValidationError, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Content="Cancel"
                           Click="CancelButton_Click"
                           Margin="0,0,10,0"
                           Padding="20,8"
                           MinWidth="100"/>
                <ui:Button Content="Save"
                           Click="SaveButton_Click"
                           Appearance="Primary"
                           Padding="20,8"
                           MinWidth="100"/>
            </StackPanel>
        </Grid>
        </Grid>
    </Border>
</Window>
